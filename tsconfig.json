{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Asegúrate de tener esto
    "paths": {
      "@/*": ["./*"], // Asegúrate de tener esto para la raíz del proyecto
      "@components/*": ["app/(platform)/_components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "declaration.d.ts",
    "app/[locale]/(platform)/_components/Header/Navbar/NavbarComponent.tsx",
    "app/[locale]/(platform)/_components/Header/LanguageChanger.js"
, "app/[locale]/(platform)/_components/Projects/ProjectsData.js"  ],
  "exclude": ["node_modules"]
}
